<%
	@page_title = "Asset: #{@asset.title}"
%>

<div id="asset"></div>

<div id="editform">
<%= semantic_form_for(@asset, :as => :asset, :url => a_asset_path(@asset)) do |f| %>
	<%= f.inputs :name => "Basics" do %>
		<%= f.input :title %>
		<%= f.input :caption, :as => :text, :input_html => {:rows => 3} %>
	<% end %>
	
	<%= f.inputs :name => "Rights" do %>
		<%= f.input :owner %>
		<%= f.input :url %>
	<% end %>
	
	<%= f.inputs :name => "Metadata" do %>
		<%= f.input :image_taken, :as => :date %>
		<%= f.input :image_gravity, :as => :select, :collection => Asset::GRAVITY_OPTIONS %>
	<% end %>
	
	<%= f.inputs :name => "Internal" do %>
		<%= f.input :notes %>
	<% end %>
	
	<%= f.buttons %>
<% end %>
</div>

<script type="text/javascript">
    assetAdm = new AssetHost.AssetAdmin(<%= @asset.json.to_json.html_safe %>,{el:"#asset"})
</script>
